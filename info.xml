<?xml version="1.0"?>
<extension key="com.skvare.fileanalyzer" type="module">
  <file>fileanalyzer</file>
  <name>File Analyzer</name>
  <description>Analyze CiviCRM file uploads, identify abandoned files, and manage storage efficiently</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Sunil Pawar</author>
    <email>sunil@skvare.com</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/Skvare/com.skvare.fileanalyzer</url>
    <url desc="Documentation">https://github.com/Skvare/com.skvare.fileanalyzer</url>
    <url desc="Support">https://github.com/Skvare/com.skvare.fileanalyzer</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-08-05</releaseDate>
  <version>1.0</version>
  <develStage>alpha</develStage>
  <compatibility>
    <ver>6.6</ver>
  </compatibility>
  <comments>This extension provides comprehensive file analysis tools for CiviCRM installations.</comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Fileanalyzer</namespace>
    <format>23.02.1</format>
    <angularModule>crmFileanalyzer</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
    <mixin>menu-xml@1.0.0</mixin>
  </mixins>
  <upgrader>CRM_Fileanalyzer_Upgrader</upgrader>
</extension>
