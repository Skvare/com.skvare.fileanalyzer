<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Fileanalyzer</base>
  <class>FileanalyzerReference</class>
  <name>civicrm_file_analyzer_reference</name>
  <comment>Tracks where files are referenced/used in the system</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique FileanalyzerReference ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>file_analyzer_id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Reference to civicrm_file_analyzer.id</comment>
    <html>
      <type>EntityRef</type>
      <label>File Analyzer</label>
    </html>
  </field>
  <foreignKey>
    <name>file_analyzer_id</name>
    <table>civicrm_file_analyzer</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>reference_type</name>
    <type>varchar</type>
    <length>50</length>
    <required>true</required>
    <comment>Type: file_record, contact_image, contribution_page, message_template, custom_field</comment>
    <pseudoconstant>
      <callback>CRM_Fileanalyzer_BAO_FileAnalyzerReference::getReferenceTypes</callback>
    </pseudoconstant>
    <html>
      <type>Select</type>
      <label>Reference Type</label>
    </html>
  </field>

  <field>
    <name>entity_table</name>
    <type>varchar</type>
    <length>64</length>
    <comment>Related entity table name</comment>
    <html>
      <type>Text</type>
      <label>Entity Table</label>
    </html>
  </field>

  <field>
    <name>entity_id</name>
    <type>int unsigned</type>
    <comment>Related entity ID</comment>
    <html>
      <type>Number</type>
      <label>Entity ID</label>
    </html>
  </field>

  <field>
    <name>field_name</name>
    <type>varchar</type>
    <length>100</length>
    <comment>Field name where file is referenced</comment>
    <html>
      <type>Text</type>
      <label>Field Name</label>
    </html>
  </field>

  <field>
    <name>reference_details</name>
    <type>text</type>
    <comment>JSON with additional reference metadata</comment>
    <html>
      <type>TextArea</type>
      <label>Reference Details</label>
    </html>
  </field>

  <field>
    <name>created_date</name>
    <type>datetime</type>
    <required>true</required>
    <comment>When this reference was discovered</comment>
    <html>
      <type>Select Date</type>
      <label>Created Date</label>
    </html>
  </field>

  <field>
    <name>last_verified_date</name>
    <type>datetime</type>
    <comment>Last time reference was verified</comment>
    <html>
      <type>Select Date</type>
      <label>Last Verified Date</label>
    </html>
  </field>

  <field>
    <name>is_active</name>
    <type>boolean</type>
    <default>1</default>
    <required>true</required>
    <comment>Whether reference is still valid</comment>
    <html>
      <type>CheckBox</type>
      <label>Is Active</label>
    </html>
  </field>

  <index>
    <name>index_reference_type</name>
    <fieldName>reference_type</fieldName>
  </index>

  <index>
    <name>index_entity</name>
    <fieldName>entity_table</fieldName>
    <fieldName>entity_id</fieldName>
  </index>

</table>
